<div class="text"></div>
<style>
    /* The heart of the matter */

    .horizontal-scrollable>.row {
        overflow-x: auto;
        white-space: nowrap;
    }

    .horizontal-scrollable>.row>.col-xs-4 {
        display: inline-block;
        float: none;
    }

    /* Decorations */

    .col-xs-4 {
        color: white;
        font-size: 24px;
        padding-bottom: 20px;
        padding-top: 18px;
    }

    .col-xs-4:nth-child(2n+1) {
        background: green;
    }

    .col-xs-4:nth-child(2n+2) {
        background: black;
    }

    div.scroll {
        margin: 4px, 4px;
        padding: 4px;
        width: 100%;
        overflow-x: auto;
        overflow-y: hidden;
        white-space: nowrap;
    }
</style>

<center>
    <div class="container">

        <h1 style="text-align:center;color:red;">
            Lista de estudiantes matriculados
        </h1>
        <h5>
            Todo error deja una enseñanza, toda enseñanza deja una experiencia y toda experiencia deja una huella
        </h5>
        <div class="container horizontal-scrollable">
            <div class="scroll">
                <table id="datatablebuttons" class="table table-striped table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th>ESTUDIANTE</th>
                            <th>GRADO MATRICULADO ACTUAL</th>
                            <th>GRADO INFORME</th>
                            <th>NIUP</th>
                            <th>FECHA DE NTO</th>
                            <th>RH</th>
                            <th>TEL FIJO</th>
                            <th>NOMBRE PAPA</th>
                            <th>DOCUMENTO PAPA</th>
                            <th>CEL PAPA</th>
                            <th>EMAIL PAPA</th>
                            <th>NOMBRE MAMA</th>
                            <th>DOCUMENTO MAMA</th>
                            <th>CEL MAMA</th>
                            <th>EMAIL MAMA</th>
                            <th>DIRECCION</th>
                            <th>ESTADO</th>
                            <th>ACCION</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each students}}
                        <tr>
                            <td>{{estudiante}}</td>
                            <td>{{gradomatricula}}</td>
                            <td>{{gradoinforme}}</td>
                            <td>{{niup}}</td>
                            <td>{{fechanto}}</td>
                            <td>{{rh}}</td>
                            <td>{{telfijo}}</td>
                            {{#each padre}}
                            <td>{{name}} {{lastname}}</td>
                            <td>{{documento}}</td>
                            <td>{{celular}}</td>
                            <td>{{email}}</td>
                            {{/each}}
                            {{#each madre}}
                            <td>{{name}} {{lastname}}</td>
                            <td>{{documento}}</td>
                            <td>{{celular}}</td>
                            <td>{{email}}</td>
                            {{/each}}
                            <td>{{direccion}}</td>
                            <td>
                                {{#xif expected='0' expression='===' val=status}}<span
                                    class="badge badge-danger">Eliminado</span>{{/xif}}
                                {{#xif expected='1' expression='===' val=status}}<span
                                    class="badge badge-warning">Pendiente</span>{{/xif}}
                                {{#xif expected='2' expression='===' val=status}}<span
                                    class="badge badge-success">Matriculado</span>{{/xif}}
                            </td>
                            <td>
                                {{#xif expected='0' expression='===' val=status}}
                                <a href="#" class="badge badge-danger">Eliminar permanentemente</a>
                                <a href="#" class="badge badge-success">Restaurar usuario</a>
                                <a href="#" class="badge badge-info">Opciones</a>
                                {{/xif}}
                                {{#xif expected='1' expression='===' val=status}}
                                <a href="#" class="badge badge-success">Matricular usuario</a>
                                <a href="#" class="badge badge-info">Opciones</a>
                                {{/xif}}
                                {{#xif expected='2' expression='===' val=status}}
                                <a href="#" class="badge badge-danger">Eliminar usuario</a>
                                <a href="#" class="badge badge-info">Opciones</a>
                                {{/xif}}
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>ESTUDIANTE</th>
                            <th>GRADO MATRICULADO ACTUAL</th>
                            <th>GRADO INFORME</th>
                            <th>NIUP</th>
                            <th>FECHA DE NTO</th>
                            <th>RH</th>
                            <th>TEL FIJO</th>
                            <th>NOMBRE PAPA</th>
                            <th>DOCUMENTO PAPA</th>
                            <th>CEL PAPA</th>
                            <th>EMAIL PAPA</th>
                            <th>NOMBRE MAMA</th>
                            <th>DOCUMENTO MAMA</th>
                            <th>CEL MAMA</th>
                            <th>EMAIL MAMA</th>
                            <th>DIRECCION</th>
                            <th>ESTADO</th>
                            <th>ACCION</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</center>
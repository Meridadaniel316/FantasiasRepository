<div class="text"></div>
<style>
    /* The heart of the matter */

    .horizontal-scrollable>.row {
        overflow-x: auto;
        white-space: nowrap;
    }

    .horizontal-scrollable>.row>.col-xs-4 {
        display: inline-block;
        float: none;
    }

    /* Decorations */

    .col-xs-4 {
        color: white;
        font-size: 24px;
        padding-bottom: 20px;
        padding-top: 18px;
    }

    .col-xs-4:nth-child(2n+1) {
        background: green;
    }

    .col-xs-4:nth-child(2n+2) {
        background: black;
    }

    div.scroll {
        margin: 4px, 4px;
        padding: 4px;
        width: 100%;
        overflow-x: auto;
        overflow-y: hidden;
        white-space: nowrap;
    }
</style>

<center>
    <div class="container">

        <h1 style="text-align:center;color:red;">
            Lista de usuarios registrados
        </h1>
        <div class="container horizontal-scrollable">
            <div class="scroll">
                <table id="datatablebuttons" class="table table-striped table-hover" style="width:100%">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Usuario</th>
                            <th>Documento</th>
                            <th>Gmail</th>
                            <th>Genero</th>
                            <th>Nacimiento</th>
                            <th>Permisos</th>
                            <th>Numero de celular</th>
                            <th>Fecha creacion</th>
                            <th>Fecha actualizacion</th>
                            <th>Foto de perfil</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                        <tr>
                            <td>{{name}} {{lastname}}</td>
                            <td>{{username}}</td>
                            <td>{{tipodocumento}}.{{documento}}</td>
                            <td>{{email}}</td>
                            <td>{{genero}}</td>
                            <td>{{nacimiento}}</td>
                            <td>
                                {{#each roles}}
                                {{#xif expected='user' expression='==' val=name}}<span
                                    class="badge badge-success">Usuario</span>{{/xif}}
                                {{#xif expected='moderator' expression='==' val=name}}<span
                                    class="badge badge-warning">Moderador{{#xif expected='Femenino' expression='==='
                                    val=genero}}a{{else}}{{/xif}}</span>{{/xif}}
                                {{#xif expected='admin' expression='==' val=name}}<span
                                    class="badge badge-danger">Administrador{{#xif expected='Femenino' expression='==='
                                    val=genero}}a{{else}}{{/xif}}</span>{{/xif}}
                                {{/each}}
                            </td>
                            <td>{{celular}}</td>
                            <td>{{createdAt}}</td>
                            <td>{{updatedAt}}</td>
                            <td>
                                <div class="img-box p-1 border rounded m-auto" style="max-width: 150px;">
                                    <img class="d-block w-100 rounded" src="{{image}}" alt="">
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Nombre</th>
                            <th>Usuario</th>
                            <th>Documento</th>
                            <th>Gmail</th>
                            <th>Genero</th>
                            <th>Nacimiento</th>
                            <th>Permisos</th>
                            <th>Numero de celular</th>
                            <th>Fecha creacion</th>
                            <th>Fecha actualizacion</th>
                            <th>Foto de perfil</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</center>
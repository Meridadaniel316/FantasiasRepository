<div class="text">
    <div class="card bg-light">
        <article class="card-body mx-auto" style="max-width: 500px;">
            <h4 class="card-title mt-3 text-center">Crear un producto nuevo</h4>
            <p class="divider-text">
                <span class="bg-light">New product</span>
            </p>
            <form action="/product" method="POST">
                <div class="form-group input-group">
                    <input name="token" class="form-control" value="{{user.token}}" type="hidden" readonly>
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fas fa-sitemap"></i> </span>
                    </div>
                    <input name="name" class="form-control" value="{{message.name}}" placeholder="Nombre del producto"
                        type="text">
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fas fa-text-width"></i> </span>
                    </div>
                    <textarea name="description" class="form-control" placeholder="Descripción del producto"
                        type="text">{{message.description}}</textarea>
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fas fa-money-bill-alt"></i> </span>
                    </div>
                    <input name="price" class="form-control" value="{{message.price}}" placeholder="Precio"
                        type="number">
                    <select class="input-group-text" id="category" value="{{message.category}}" name="category">
                        <option value="Desconocida" disabled selected>Categoría</option>
                        {{#if category}}
                        {{#each category}}
                        <option value="{{name}}">{{name}}</option>
                        {{/each}}
                        {{/if}}
                    </select>
                </div>
                <div class="form-group input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fas fa-link"></i> </span>
                    </div>
                    <input name="image" class="form-control" value="{{message.image}}"
                        placeholder="Imagen URL (opcional)" type="text">
                    <label class="input-group-text" for="inputGroupFile02">Browse</label>
                </div>
                <div class="input-group mb-3">
                    <input type="file" accept="image/*" class="form-control" id="inputGroupFile02" disabled>

                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> Crear producto </button>
                </div>
            </form>
        </article>
    </div>
</div>

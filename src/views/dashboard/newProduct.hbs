<div class="text">
    <div class="card bg-light">
        <article class="card-body mx-auto" style="max-width: 320px;">
            <h4 class="card-title mt-3 text-center">Crear nueva categoria</h4>
            <p class="divider-text">
                <span class="bg-light">New category</span>
            </p>
            <form action="/category" method="POST">
                <div class="form-group input-group">
                    <input name="token" class="form-control" value="{{user.token}}" type="hidden" readonly>
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                    </div>
                    <input name="name" class="form-control" value="{{message.nameCategory}}"
                        placeholder="Nombre de la categoria" type="text">
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                    </div>
                    <textarea name="description" class="form-control" placeholder="Descripción de la categoria"
                        type="text">{{message.descriptionCategory}}</textarea>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-block"> Crear categoria </button>
                </div>
            </form>
        </article>
    </div>

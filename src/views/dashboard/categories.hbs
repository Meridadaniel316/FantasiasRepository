
{{#if category}}
{{#each category}}
<a href="/admin-category/{{_id}}">
<div class="text">
    <div class="card bg-light">
        <article class="card-body mx-auto" style="max-width: 350px;">

                <h4 class="card-title mt-3 text-center"><i class="{{icon}}"></i>
                    <p>{{name}}</p>
                </h4>
                <p class="divider-text">
                    <span class="bg-light">{{_id}}</span>
                </p>
                <h6 class="card-title mt-3 text-center"><b><u>Descripción:</u></b></h6>
                <h6 class="card-title mt-3 text-center">{{description}}</h6>
                <p class="divider-text"></p>

                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fas fa-sitemap"></i> </span>
                    </div>
                    <input name="name" class="form-control"
                        value="{{#if message.message }}{{message.name}}{{else}}{{name}}{{/if}}"
                        placeholder="Nombre de la categoria" type="text" disabled>
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fas fa-moon"></i> </span>
                    </div>
                    <input name="name" class="form-control"
                        value="{{#if message.message }}{{message.icon}}{{else}}{{icon}}{{/if}}"
                        placeholder="ICONO (opcional)" type="text" disabled>
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fas fa-text-width"></i> </span>
                    </div>
                    <textarea name="description" class="form-control" placeholder="Descripción del producto"
                        type="text" disabled>{{#if message.message }}{{message.description}}{{else}}{{description}}{{/if}}</textarea>
                </div>

                <button type="submit" class="btn btn-info btn-block"> ver categoria </button>

            
        </article>
        
    </div>
</div>
</a>
{{/each}}
{{/if}}
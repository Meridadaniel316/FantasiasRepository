    <div class="card bg-light">
        <article class="card-body mx-auto " style="max-width: 350px;">
            <h4 class="card-title mt-3 text-center">Eliminar producto</h4>
            <h6 class="card-title mt-3 text-center">ID: {{product._id}}</h6>

            <div class="container">
                <img src="{{product.image}}" alt="">
            </div>
            <h6 class="card-title mt-3 text-center"><b>Nombre:</b> {{product.name}}</h6>
            <h6 class="card-title mt-3 text-center"><b>Precio:</b> ${{product.price}}</h6>
            <h6 class="card-title mt-3 text-center"><b>Descripción:</b> {{product.description}}</h6>
            <h6 class="card-title mt-3 text-center"><b>Categoría:</b> {{product.category}}</h6>
            <h6 class="card-title mt-3 text-center">{{product.createdAt}}</h6>
            <p class="divider-text">
                <span class="bg-light">Eliminar producto</span>
            </p>
            <form action="/deleteproduct/{{product._id}}" method="POST">
                <div class="form-group input-group">
                    <input name="token" class="form-control" value="{{user.token}}" type="hidden" readonly>
                </div>
                <div class="form-group input-group">
                    <input name="id" class="form-control" value="{{product._id}}" type="text" readonly>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-danger btn-block"> eliminar producto </button>
                </div>
            </form>

        </article>
    </div>
</div>
